<launch>
  <arg name="model" default="$(env TURTLEBOT3_MODEL)" doc="model type [burger, waffle, waffle_pi]"/>
  <arg name="first_tb3"  default="tb3_0"/>
  <arg name="second_tb3" default="tb3_1"/>
  <arg name="third_tb3"  default="tb3_2"/>
<arg name="4th_tb3"  default="tb3_3"/>
<arg name="5th_tb3"  default="tb3_4"/>
<arg name="6th_tb3"  default="tb3_5"/>


  <arg name="first_tb3_x_pos" default="0.0"/>
  <arg name="first_tb3_y_pos" default="0.0"/>
  <arg name="first_tb3_z_pos" default=" 0.0"/>
  <arg name="first_tb3_yaw"   default=" 0.0"/>

  <arg name="second_tb3_x_pos" default=" -1.0"/>
  <arg name="second_tb3_y_pos" default="-1.0"/>
  <arg name="second_tb3_z_pos" default=" 0.0"/>
  <arg name="second_tb3_yaw"   default=" 0.0"/>

  <arg name="third_tb3_x_pos" default=" -1.0"/>
  <arg name="third_tb3_y_pos" default=" 1.0"/>
  <arg name="third_tb3_z_pos" default=" 0.0"/>
  <arg name="third_tb3_yaw"   default=" 0.0"/>

  <arg name="4th_tb3_x_pos" default=" -2.0"/>
  <arg name="4th_tb3_y_pos" default=" -1.0"/>
  <arg name="4th_tb3_z_pos" default=" 0.0"/>
  <arg name="4th_tb3_yaw"   default=" 0.0"/>

  <arg name="5th_tb3_x_pos" default=" -2.0"/>
  <arg name="5th_tb3_y_pos" default=" 1.0"/>
  <arg name="5th_tb3_z_pos" default=" 0.0"/>
  <arg name="5th_tb3_yaw"   default=" 0.0"/>

  <arg name="6th_tb3_x_pos" default=" -3.0"/>
  <arg name="6th_tb3_y_pos" default=" 0.0"/>
  <arg name="6th_tb3_z_pos" default=" 0.0"/>
  <arg name="6th_tb3_yaw"   default=" 0.0"/>


  <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <arg name="world_name" value="$(find turtlebot_formation2)/world/playground.world"/>
    <!-- <arg name="world_name" value="$(find turtlebot_formation2)/world/cloister.world"/> -->
    <arg name="paused" value="false"/>
    <arg name="use_sim_time" value="true"/>
    <arg name="gui" value="true"/>
    <arg name="headless" value="false"/>
    <arg name="debug" value="false"/>
  </include>  

  <group ns = "$(arg first_tb3)">
    <param name="robot_description" command="$(find xacro)/xacro $(find turtlebot_formation2)/urdf_user/gazebo_turtlebot3_$(arg model).urdf.xacro bodyframe:=tb3_0" />

    <node pkg="robot_state_publisher" type="robot_state_publisher" name="robot_state_publisher" output="screen">
      <param name="publish_frequency" type="double" value="50.0" />
      <param name="tf_prefix" value="$(arg first_tb3)" />
    </node>
    
    <node name="spawn_urdf" pkg="gazebo_ros" type="spawn_model" args="-urdf -model $(arg first_tb3) -x $(arg first_tb3_x_pos) -y $(arg first_tb3_y_pos) -z $(arg first_tb3_z_pos) -Y $(arg first_tb3_yaw) -param robot_description" />
  </group>

  <group ns = "$(arg second_tb3)">
    <param name="robot_description" command="$(find xacro)/xacro $(find turtlebot_formation2)/urdf_user/gazebo_turtlebot3_$(arg model).urdf.xacro bodyframe:=tb3_1" />

    <node pkg="robot_state_publisher" type="robot_state_publisher" name="robot_state_publisher" output="screen">
      <param name="publish_frequency" type="double" value="50.0" />
      <param name="tf_prefix" value="$(arg second_tb3)" />
    </node>

    <node name="spawn_urdf" pkg="gazebo_ros" type="spawn_model" args="-urdf -model 
          $(arg second_tb3) -x $(arg second_tb3_x_pos) -y $(arg second_tb3_y_pos) -z $(arg second_tb3_z_pos) -Y 
          $(arg second_tb3_yaw) -param robot_description" />
  </group>

  <group ns = "$(arg third_tb3)">
    <param name="robot_description" command="$(find xacro)/xacro $(find turtlebot_formation2)/urdf_user/gazebo_turtlebot3_$(arg model).urdf.xacro bodyframe:=tb3_2" />
            
    <node pkg="robot_state_publisher" type="robot_state_publisher" name="robot_state_publisher" output="screen">
      <param name="publish_frequency" type="double" value="50.0" />
      <param name="tf_prefix" value="$(arg third_tb3)" />
    </node>

    <node name="spawn_urdf" pkg="gazebo_ros" type="spawn_model" args="-urdf -model $(arg third_tb3) -x $(arg third_tb3_x_pos) -y $(arg third_tb3_y_pos) -z $(arg third_tb3_z_pos) -Y $(arg third_tb3_yaw) -param robot_description" />
  </group>

  <group ns = "$(arg 4th_tb3)">
    <param name="robot_description" command="$(find xacro)/xacro $(find turtlebot_formation2)/urdf_user/gazebo_turtlebot3_$(arg model).urdf.xacro bodyframe:=tb3_2" />

    <node pkg="robot_state_publisher" type="robot_state_publisher" name="robot_state_publisher" output="screen">
      <param name="publish_frequency" type="double" value="50.0" />
      <param name="tf_prefix" value="$(arg 4th_tb3)" />
    </node>

    <node name="spawn_urdf" pkg="gazebo_ros" type="spawn_model" args="-urdf -model $(arg 4th_tb3) -x $(arg 4th_tb3_x_pos) -y $(arg 4th_tb3_y_pos) -z $(arg 4th_tb3_z_pos) -Y $(arg third_tb3_yaw) -param robot_description" />
  </group>

    <group ns = "$(arg 5th_tb3)">
    <param name="robot_description" command="$(find xacro)/xacro $(find turtlebot_formation2)/urdf_user/gazebo_turtlebot3_$(arg model).urdf.xacro bodyframe:=4th_tb3" />

    <node pkg="robot_state_publisher" type="robot_state_publisher" name="robot_state_publisher" output="screen">
      <param name="publish_frequency" type="double" value="50.0" />
      <param name="tf_prefix" value="$(arg 5th_tb3)" />
    </node>

    <node name="spawn_urdf" pkg="gazebo_ros" type="spawn_model" args="-urdf -model $(arg 5th_tb3) -x $(arg 5th_tb3_x_pos) -y $(arg 5th_tb3_y_pos) -z $(arg 5th_tb3_z_pos) -Y $(arg 5th_tb3_yaw) -param robot_description" />
  </group>

  <group ns = "$(arg 6th_tb3)">
    <param name="robot_description" command="$(find xacro)/xacro $(find turtlebot_formation2)/urdf_user/gazebo_turtlebot3_$(arg model).urdf.xacro bodyframe:=tb3_2" />

    <node pkg="robot_state_publisher" type="robot_state_publisher" name="robot_state_publisher" output="screen">
      <param name="publish_frequency" type="double" value="50.0" />
      <param name="tf_prefix" value="$(arg 6th_tb3)" />
    </node>

    <node name="spawn_urdf" pkg="gazebo_ros" type="spawn_model" args="-urdf -model $(arg 6th_tb3) -x $(arg 6th_tb3_x_pos) -y $(arg 6th_tb3_y_pos) -z $(arg 6th_tb3_z_pos) -Y $(arg 6th_tb3_yaw) -param robot_description" />
  </group>


</launch>
